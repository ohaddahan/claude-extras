{
  "env": {
    "RUST_BACKTRACE": "1",
    "CARGO_TERM_COLOR": "always"
  },
  "permissions": {
    "allow": [
      "WebFetch(domain:docs.rs)",
      "WebFetch(domain:crates.io)",
      "Bash(pwd)",
      "Bash(which:*)",
      "Bash(node --version)",
      "Bash(npm --version)",
      "Bash(rustc --version)",
      "Bash(anchor --version)",
      "Bash(wc:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(cargo fmt:*)",
      "Bash(rustfmt:*)",
      "Bash(cargo build:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo test:*)",
      "Bash(cargo check:*)",
      "Bash(cargo tree:*)",
      "Bash(cargo search:*)",
      "Bash(anchor run check:*)",
      "Bash(anchor build:*)",
      "Bash(anchor test:*)",
      "Bash(SQLX_OFFLINE=true cargo clippy:*)",
      "Bash(./scripts/init_db.sh)",
      "Bash(npm run lint:fix)",
      "Bash(npm install)",
      "Bash(npm run build)",
      "Bash(npm run typecheck)",
      "Bash(npm lint)",
      "Bash(npm run lint:fix)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(anchor idl build)",
      "Bash(ls:*)",
      "Read(./*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Read(**/.env)",
      "Read(**/.env*)",
      "Read(**/secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/credentials*)",
      "Bash(npm run deploy)",
      "Bash(anchor deploy)",
      "Bash(chmod 777:*)",
      "Bash(sudo:*)",
      "Bash(find:*-exec:*)",
      "Bash(find:*-execdir:*)",
      "Bash(find:*-delete:*)",
      "Bash(find:*-ok:*)",
      "Write(~/.claude)"
    ],
    "ask": [
      "Bash(git push:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/ohaddahan/RustroverProjects/zklsol/claude-extras/notifications/notify-claude.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/ohaddahan/RustroverProjects/zklsol/claude-extras/notifications/notify-claude.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c 'node \"$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2>/dev/null | head -1)dist/index.js\"'"
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "claude-hud@claude-hud": true,
    "ralph-loop@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": false
  }
}
