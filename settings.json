{
  "env": {
    "RUST_BACKTRACE": "1",
    "CARGO_TERM_COLOR": "always"
  },
  "permissions": {
    "allow": [
      "Bash(npx tsc:*)",
      "Bash(codex:*)",
      "Bash(codex exec:*)",
      "Bash(nargo:*)",
      "Bash(sunspot:*)",
      "Bash(npm run codama:*)",
      "Bash(npm run build:*)",
      "Bash(cargo doc:*)",
      "Bash(git -C:*)",
      "WebFetch(domain:lib.rs)",
      "WebFetch(domain:tailwindcss.com)",
      "WebFetch(domain:docs.rs)",
      "WebFetch(domain:crates.io)",
      "Bash(pwd)",
      "Bash(which:*)",
      "Bash(node --version)",
      "Bash(npm --version)",
      "Bash(rustc --version)",
      "Bash(anchor --version)",
      "Bash(wc:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo sqlx prepare:*)",
      "Bash(rustfmt:*)",
      "Bash(cargo build:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo test:*)",
			"Bash(npm run test:*)",
			"Bash(npm test:*)",
      "Bash(cargo check:*)",
      "Bash(cargo tree:*)",
      "Bash(cargo search:*)",
      "Bash(anchor run check:*)",
      "Bash(anchor build:*)",
      "Bash(anchor test:*)",
      "Bash(SQLX_OFFLINE=true cargo clippy:*)",
      "Bash(./scripts/init_db.sh)",
      "Bash(npm run lint:fix)",
      "Bash(npm install)",
      "Bash(npm run build)",
      "Bash(npm run typecheck)",
      "Bash(npm lint)",
      "Bash(npm run lint:fix)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(anchor idl build)",
      "Bash(ls:*)",
      "Bash(cat /tmp/codex-output*)",
      "Bash(tee:*)",
      "Bash(mktemp:*)",
      "Read(./*)",
      "Read(/tmp/codex-output*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Read(**/.env)",
      "Read(**/.env*)",
      "Read(**/secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/credentials*)",
      "Bash(npm run deploy)",
      "Bash(anchor deploy)",
      "Bash(chmod 777:*)",
      "Bash(sudo:*)",
      "Bash(find:*-exec:*)",
      "Bash(find:*-execdir:*)",
      "Bash(find:*-delete:*)",
      "Bash(find:*-ok:*)",
      "Write(~/.claude)"
    ],
    "ask": [
      "Bash(git push:*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/continuous-learning-activator.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify-claude.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify-claude.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c 'node \"$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2>/dev/null | head -1)dist/index.js\"'"
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "claude-hud@claude-hud": true,
    "ralph-loop@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "context7@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": false
  }
}
